extends ./main.layout.pug

block content
  .welcome-section
    section.hero
      .container.hero__container
        header.header
          a.logo(href="#") МП

          nav.menu
            - var menuItems = ["Обо мне", "Навыки", "Работы", "Отзывы"];
            ul.menu__list.menu__list--header
              each item in menuItems
                li.menu__item
                  a(href="#").menu__link #{item}

          - var socials = ["insta", "vk", "github", "envelope"];
          ul.socials.socials--header
            each item in socials
              li.socials__item
                a(href="#").socials__link
                  +icon(item, "socials__icon")

          .hamburger__menu
            input.hambuger__input(type="checkbox")#hambuger__toggle
            label.hamburger__open-btn(for="hambuger__toggle")
              span.hamburger__open-span
            .hamburger__overlay
              input.hambuger__input(type="checkbox")#hambuger__toggle-close
              label.hamburger__close-btn(for="hambuger__toggle-close")
                span.hamburger__close-span
              .hamburger__content
                nav.menu
                  - var menuItems = ["Обо мне", "Навыки", "Работы", "Отзывы"];
                  ul.menu__list.menu__list--hamburger
                    each item in menuItems
                      li.menu__item--hamburger
                        a(href="#").menu__link--hamburger #{item}
                .hamburger__content-socials
                  - var socials = ["insta", "vk", "github", "envelope"];
                  ul.socials.socials--hamburger
                    each item in socials
                      li.socials__item
                        a(href="#").socials__link
                          +icon(item, "socials__icon--hamburger")


        .userinfo
          .userinfo__title Личный сайт #[br] веб разработчика
          .userinfo__name Михаил Пак

        .hero__bottom-buttons
          button.scroll-down-btn Скролл
          a(href="#").scroll-icon-link
            +icon("scroll1", "scroll__icon")

    section.about
      .container
        .about__columns
          .about__user
            .user
              .user__avatar
                .user__avatar-wrapper
                  +image('content/user.jpg', 'user__avatar-pic')
              .user__about
                - 
                  var userinfo = [
                    ['Проживаю:', "Москва"],
                    ['Возраст:', "22 года"],
                    ['Родился:', "9 марта 1998"],
                  ];
                table.user__table
                  each item in userinfo
                    tr
                      td.user__table-title #{item[0]}
                      td.user__table-content #{item[1]}
          .about__user-text
            .about__main-text-content
              .about__desc Привет, меня зовут
              .about__title Михаил Пак
              .about__text-info
                p Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
            .about__ps
              | Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
  
  .middle-section
    .triangles.middle-section__triangles-top
      svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--position--left
        polygon(points="0,0 0,100 1000,100")
      svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--position--right
        polygon(points="0,100 1000,100 1000,0")
    section.values
      .container.values__container
        .values__wrapper
          .values__title
            .values__title-container
              .values__title-text Чем я могу быть полезен вам
              .values__content
                p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
          .values__widget
            .values__widget-container
              #skills-component
              

    section.works
          .container.works__container
            .section-title.works__section-title Мои работы
            .works__content
              #preview-component

    section.contacts
      .container.contacts__container
        .contacts__about
          #reviews-component

    footer.footer
      .container.container__footer
        .footer__copyright
          .footer__copyright-year-wrap
            .footer__copyright-year © 2020
          .footer__copyright-myinfo
            .footer__copyright-name Михаил Пак
            .footer__copyright-desc Личный сайт веб&nbsp;разработчика
        .footer__content
          .footer__main-menu
            nav.menu
              - var menuItems = ["Обо мне", "Навыки", "Работы", "Отзывы"];
              ul.menu__list
                each item in menuItems
                  li.menu__item
                    a(href="#").menu__link #{item}
          .footer__content-desc
            .footer__content-block
              p.footer__block-text Этот сайт я сделал в рамках обучения в Школе онлайн образования Loftschool
              .footer__socials
                - var socials = ["insta", "vk", "github", "envelope"];
                ul.socials
                  each item in socials
                    li.socials__item--footer
                      a(href="#").socials__link.socials__link--footer
                        +icon(item, "socials__icon--footer")
            .footer__content-block
              p.footer__block-quote Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
              .footer__author Martin Golding
            


          

