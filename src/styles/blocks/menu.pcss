.menu__list {
    display: flex;
    justify-content: center;
}

.menu__link {
    text-decoration: none;
    white-space: nowrap;
    padding-bottom: 35px;
    padding-left: 50px;
    padding-right: 50px;
    border-bottom: 1px solid transparent;
    transition: border-bottom-color 0.5s, color 0.5s;

    &:hover {
        color: #FF9A00;
        border-bottom-color: #FF9A00;
        transition: 0.5s;
    }
}